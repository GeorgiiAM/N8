<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jozin.n8.fragments.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnLogOut"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="32dp"
                    android:layout_centerHorizontal="true"/>
                    //android:src="@drawable/logo2"


                <TextView
                    android:id="@+id/tv_label_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_profile"
                    android:paddingTop="10dp"
                    android:text="Name"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_label_name"
                    android:text="Jozin"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_label_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:paddingTop="10dp"
                    android:text="Email"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_label_email_id"
                    android:text="antoschenko.gm@gmail.com"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_label_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_email_id"
                    android:paddingTop="10dp"
                    android:text="jump"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_jump"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_label_mobile_number"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnOtherUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jump"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:text="View other user" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnLogOut"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:text="Lof out"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
